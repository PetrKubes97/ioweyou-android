<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="0dp"
    android:clipToPadding="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/debt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="8dp"
        app:theme="@style/ToolBarStyle" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="8dp"
        android:layout_below="@+id/debt_toolbar"
        android:layout_alignParentStart="true"
        android:clipToPadding="true"
        android:paddingBottom="10dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtIL_who"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            android:theme="@style/TextLabel"
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_name"
                android:layout_weight="1"
                android:hint="@string/who"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtIL_what"
            android:layout_height="wrap_content"
            android:layout_width="181dp"
            app:layout_constraintTop_toBottomOf="@+id/txtIL_who"
            app:layout_constraintRight_toRightOf="@+id/txtIL_who"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel"
            android:layout_marginEnd="72dp"
            android:hint="@string/amount"
            app:layout_constraintLeft_toLeftOf="@+id/txtIL_who">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txt_who"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:layout_width="66dp"
            android:layout_height="54dp"
            android:id="@+id/spn_currency"
            android:layout_marginStart="8dp"
            android:background="@color/primary"
            app:layout_constraintLeft_toRightOf="@+id/txtIL_what"
            app:layout_constraintTop_toTopOf="@+id/txtIL_what"
            app:layout_constraintBottom_toBottomOf="@+id/txtIL_what"
            app:layout_constraintVertical_bias="1.0" />

        <RadioGroup
            android:layout_width="236dp"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup2"
            app:layout_constraintLeft_toLeftOf="@+id/txtIL_who"
            app:layout_constraintRight_toRightOf="@+id/txtIL_who"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtIL_what">

            <RadioButton
                android:text="@string/i_owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdio_my_debt"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:checked="true"/>
            <RadioButton
                android:text="@string/they_owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdio_their_debt"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"/>
        </RadioGroup>


    </android.support.constraint.ConstraintLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_add_debt">

        <RadioButton
            android:text="@string/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio_money"
            android:layout_weight="1"
            android:checked="true"/>

        <RadioButton
            android:text="@string/thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdio_thing" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/radioGroup"
        android:layout_alignEnd="@+id/btn_add_debt"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginStart="10dp">
        <EditText
            android:id="@+id/txt_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_done_white_24dp"
        android:transitionName="@string/transition_button"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="-32dp"
        android:layout_below="@+id/contraintLayout"
        android:layout_alignParentEnd="true"
        android:elevation="24dp"
        app:elevation="24dp"
        app:borderWidth="0dp"/>

    <TextView
        android:text="Created at:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_created_at_label"
        android:textColor="@color/black"
        android:gravity="right|center"
        android:layout_alignBottom="@+id/btn_created_at"
        android:layout_alignTop="@+id/btn_created_at"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_toStartOf="@+id/textInputLayout3" />

    <Button
        android:text="2017/12/12 24:12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_created_at"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/textInputLayout3"
        android:layout_alignEnd="@+id/textInputLayout3"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/textInputLayout3" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txt_created_at_label"
        android:layout_marginBottom="13dp" />

</RelativeLayout>

