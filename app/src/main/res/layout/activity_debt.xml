<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contraintLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/primary"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="253dp"
            android:layout_height="60dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            android:theme="@style/TextLabel"
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_name"
                android:layout_weight="1"
                android:hint="@string/who"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_height="60dp"
            android:layout_width="181dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintRight_toRightOf="@+id/textInputLayout"
            android:layout_marginTop="8dp"
            android:theme="@style/TextLabel"
            android:layout_marginEnd="72dp"
            app:layout_constraintLeft_toLeftOf="@+id/textInputLayout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:hint="@string/amount"
                android:ems="10"
                android:id="@+id/txt_amount"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:layout_width="66dp"
            android:layout_height="54dp"
            android:id="@+id/spn_currency"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textInputLayout2"
            app:layout_constraintRight_toRightOf="@+id/textInputLayout"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout2" />

        <RadioGroup
            android:layout_width="236dp"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup2"
            app:layout_constraintLeft_toLeftOf="@+id/textInputLayout"
            app:layout_constraintRight_toRightOf="@+id/textInputLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

            <RadioButton
                android:text="@string/i_owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdio_my_debt"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"
                android:checked="true"/>
            <RadioButton
                android:text="@string/they_owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdio_their_debt"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:buttonTint="@android:color/white"/>
        </RadioGroup>


    </android.support.constraint.ConstraintLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_add_debt">

        <RadioButton
            android:text="@string/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio_money"
            android:layout_weight="1"
            android:checked="true"/>

        <RadioButton
            android:text="@string/thing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdio_thing"
            android:layout_weight="1" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/radioGroup"
        android:layout_alignEnd="@+id/btn_add_debt"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginLeft="10dp">
        <EditText
            android:id="@+id/txt_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="@string/note" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_done_white_24dp"
        android:transitionName="@string/transition_button"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="-16dp"
        android:elevation="8dp"
        android:layout_below="@+id/contraintLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

